<Styles
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:setting="clr-namespace:ColorDesktop.Launcher.Utils">
    <Design.PreviewWith>
        <Border Padding="20">
            <!--  Add Controls for Previewer Here  -->
        </Border>
    </Design.PreviewWith>

    <Style Selector="Border.t1">
        <Setter Property="Background" Value="{setting:Theme ItemOverBG}" />
        <Setter Property="BorderBrush" Value="{setting:Theme ViewBorder}" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>

    <Style Selector="Border.t2">
        <Setter Property="Background" Value="{setting:Theme ViewBG}" />
        <Setter Property="BorderBrush" Value="{setting:Theme ViewBorder}" />
        <Setter Property="CornerRadius" Value="5" />
        <Setter Property="BorderThickness" Value="1" />
    </Style>
</Styles>
