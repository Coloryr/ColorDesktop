<UserControl
    x:Class="ColorDesktop.CalendarPlugin.Skin2.DayControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ColorDesktop.CalendarPlugin.Skin2"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:DataType="local:DayModel"
    mc:Ignorable="d">
    <Border Background="{Binding Back}" CornerRadius="50">
        <StackPanel>
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="25"
                Foreground="{Binding ColorNum}"
                Text="{Binding Day}" />
            <TextBlock
                HorizontalAlignment="Center"
                FontSize="13"
                Foreground="{Binding Color}"
                Text="{Binding Lunar}" />
        </StackPanel>
    </Border>
</UserControl>
