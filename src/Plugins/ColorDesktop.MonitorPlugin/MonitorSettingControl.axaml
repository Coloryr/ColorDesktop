<UserControl
    x:Class="ColorDesktop.MonitorPlugin.MonitorSettingControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:ColorDesktop.Api;assembly=ColorDesktop.Api"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:ColorDesktop.MonitorPlugin"
    x:DataType="vm:MonitorSettingModel"
    mc:Ignorable="d">
    <StackPanel>
        <StackPanel Margin="0,0,0,10" Orientation="Horizontal">
            <TextBlock
                Margin="0,0,5,0"
                VerticalAlignment="Center"
                Text="更新数据间隔" />
            <NumericUpDown
                Width="150"
                Height="35"
                Margin="0,0,5,0"
                FormatString="N0"
                Maximum="99999"
                Minimum="20"
                Value="{Binding Time}" />
            <TextBlock VerticalAlignment="Center" Text="毫秒" />

        </StackPanel>
        <TextBlock IsVisible="{Binding !IsAdmin}" Text="使用管理员方式运行，可以获取更多传感器数据" />
        <TextBlock IsVisible="{Binding IsAdmin}" Text="已在管理员方式运行" />
    </StackPanel>
</UserControl>
