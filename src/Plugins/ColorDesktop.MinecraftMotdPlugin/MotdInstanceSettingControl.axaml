<UserControl
    x:Class="ColorDesktop.MinecraftMotdPlugin.MotdInstanceSettingControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lang="clr-namespace:ColorDesktop.Api;assembly=ColorDesktop.Api"
    xmlns:local="clr-namespace:ColorDesktop.MinecraftMotdPlugin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:DataType="local:MotdInstanceSettingModel"
    mc:Ignorable="d">
    <StackPanel Orientation="Horizontal">
        <TextBlock
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            Text="{lang:Localize MotdInstanceSettingControl.Text1}" />
        <TextBox
            Width="200"
            Margin="0,0,5,0"
            Text="{Binding Ip}" />
        <TextBlock
            Margin="0,0,5,0"
            VerticalAlignment="Center"
            Text="{lang:Localize MotdInstanceSettingControl.Text2}" />
        <TextBox Width="50" Text="{Binding Port}" />
    </StackPanel>
</UserControl>
