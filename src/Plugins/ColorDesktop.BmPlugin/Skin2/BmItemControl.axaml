<UserControl
    x:Class="ColorDesktop.BmPlugin.Skin2.BmItemControl"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ColorDesktop.BmPlugin;assembly=ColorDesktop.BmPlugin"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:DataType="local:BmItemModel"
    ToolTip.Tip="{Binding Text}"
    mc:Ignorable="d">
    <UserControl.Styles>
        <Style Selector="ToolTip">
            <Setter Property="Foreground" Value="#000000" />
        </Style>
    </UserControl.Styles>
    <DockPanel Width="280">
        <DockPanel.Styles>
            <Style Selector="Border#Border1">
                <Setter Property="Background" Value="#ef6f64" />
                <Style Selector="^:pointerover">
                    <Setter Property="Background" Value="#ff8a6a" />
                </Style>
            </Style>
        </DockPanel.Styles>
        <Border
            Name="Border1"
            Classes="over"
            CornerRadius="20">
            <DockPanel Margin="15,5,15,5">
                <TextBlock
                    Width="30"
                    VerticalAlignment="Center"
                    Foreground="{Binding RatingColor}"
                    Text="{Binding Rating}"
                    TextAlignment="Center" />
                <TextBlock
                    Margin="5,0,0,0"
                    VerticalAlignment="Center"
                    Foreground="#FFFFFF"
                    Text="{Binding Text}"
                    TextTrimming="CharacterEllipsis" />
            </DockPanel>
        </Border>
    </DockPanel>
</UserControl>
